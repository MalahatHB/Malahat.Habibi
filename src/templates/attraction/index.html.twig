{% extends 'base.html.twig' %}

{% block title %}TTC{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% if attractions is empty %}
    <h2>No attraction is found</h2>
{% else %}
    <ul>
    {% for attraction in attractions %}
        <li>
            <a href="{{ path('app_attraction_view',{id: attraction.id} )}}">{{ attraction.name }}</a>
            ({{ attraction.score }}) 
            <a href="{{ path('app_attraction_edit',{id: attraction.id} )}}">edit</a>
            
            <a href="{{ path('app_attraction_delete',{id: attraction.id} )}}">delete</a>
        </li> 
    {% endfor %}
    </ul>
{% endif %}

<a href="{{ path('app_attraction_new')}}">Create new attraction</a>

{% endblock %}
